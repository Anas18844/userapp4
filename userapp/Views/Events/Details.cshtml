@model userapp.Models.Event

@{
    ViewData["Title"] = "Details";
}

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient text-white" style="background: linear-gradient(to right, #1f4037, #99f2c8);">
            <h2 class="text-center mb-0">@Model.Title</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="text-muted">Event Details</h5>
                    <p><strong>Start Date:</strong> @Model.StartDate.ToString("dd MMM yyyy")</p>
                    <p><strong>End Date:</strong> @Model.EndDate.ToString("dd MMM yyyy")</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Additional Information</h5>
                    <p><strong>Type:</strong> @Model.EventType</p>
                    <p><strong>Capacity:</strong> @Model.Capacity</p>
                    <p><strong>Country:</strong> @Model.Country</p>
                    <p><strong>City:</strong> @Model.City</p>
                    <p><strong>Language:</strong> @Model.Language</p>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
